<?xml version="1.0" encoding="UTF-8"?>
<diff>
  {% for spell in unused_spells %}
    <remove sel="Spells/Spell[@itemID='{{spell}}']" ws="after" />
  {% endfor %}
  
  <!-- note: a regex looks for the itemID equals thingy pattern -->
  <replace sel="Spells/Spell[@itemID='Firewall']/Damage/text()">20</replace>
  <replace sel="Spells/Spell[@itemID='Frostbolt']/Damage/text()">50</replace>
  <replace sel="Spells/Spell[@itemID='IceSpikes']/Damage/text()">120</replace>
  <replace sel="Spells/Spell[@itemID='StormThunder']/Damage/text()">100</replace>
  <replace sel="Spells/Spell[@itemID='Twinferno']/Damage/text()">60</replace>
  <replace sel="Spells/Spell[@itemID='CarpetBomb']/Damage/text()">200</replace>
  <replace sel="Spells/Spell[@itemID='StormIce']/Damage/text()">100</replace>
  <!-- TODO: fix flamberge description -->
  <!-- known issue: it looks like turning <Brand></Brand> into <Brand /> causes problems -->
  <replace sel="Spells/Spell[@itemID='FlambergeExplosion']/Damage/text()">150</replace>

  <replace sel="Spells/Spell[@itemID='TriShot']/Damage/text()">70</replace>
  <replace sel="Spells/Spell[@itemID='Incline']/Damage/text()">50</replace>
  
  <replace sel="Spells/Spell[@itemID='LimitBreak']/Damage/text()">15</replace>
  <replace sel="Spells/Spell[@itemID='LimitBreak']/Shots/text()">25</replace>
  <replace sel="Spells/Spell[@itemID='LimitBreak']/TimeBetweenShots/text()">0.15</replace>
  <replace sel="Spells/Spell[@itemID='LimitBreakX']/Shots/text()">25</replace>
  <replace sel="Spells/Spell[@itemID='LimitBreakX']/TimeBetweenShots/text()">0.15</replace>

  <replace sel="Spells/Spell[@itemID='Ping']/Damage/text()">50</replace>

</diff>